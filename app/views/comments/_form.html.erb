<%= form_for(@comment, :validate => true) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :content, 'コメントを送信する' %><br>
    <%= f.text_area :content %>
  </div>
  <%= f.hidden_field :summary_id, :value => @summary.id %>

  <% if user_signed_in? %>
    <%= f.hidden_field :created_by_user, :value => true %>
  <% else %>
    <%= f.hidden_field :created_by_user, :value => false %>
  <% end %>

  <div class="actions">
    <%= f.submit '送信', data: { confirm: '送信しますか？' } %>
  </div>

<% end %>