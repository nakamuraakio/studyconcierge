
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
  <legend>高校生ログイン</legend>
  <div class = "col-sm-4 col-sm-offset-4">
  <div class = "form-group form-inline-block">
    <div class="input-group", style = "margin-bottom: 20px;">
      <div class="input-group-addon"><i class = "fa fa-user fa-fw"></i></div>
      <%= f.email_field :email, autofocus: true, :placeholder => "email", :class => "form-control input-lg"%>
    </div>
    <div class="input-group", style = "margin-bottom: 20px;">
      <div class="input-group-addon"><i class = "fa fa-lock fa-fw"></i></div>
      <%= f.password_field :password, autocomplete: "off", :placeholder => "password", :class => "form-control input-lg"%>
    </div>
    <div class="submit", style = "margin-bottom: 20px;">
      <%= f.submit "ログイン", :class => "btn btn-info btn-lg", :style => "width: 100%" %>
    </div>
    <p><a href="sign_up/">アカウント作成</a> <span><%= fa_icon "angle-right" %></span></p>

  </div>
  </div>
  <% end %>


