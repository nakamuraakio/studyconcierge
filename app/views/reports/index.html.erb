<div class="container-fluid">
<div class = "row">

<div class="menu col-md-3">
<h3>メニュー</h3>
  <ul class="list-group">
  <%= link_to(home_index_path, :class => "list-group-item") do %>
    <i class="fa fa-home fa-fw"></i>ホーム
  <% end %>
  <%= link_to(new_report_path, :class => "list-group-item") do %>
    <i class="fa fa-pencil fa-fw"></i>勉強を記録する
  <% end %>
  <%= link_to(reports_path, :class => "list-group-item active") do %>
    <i class="fa fa-bar-chart fa-fw"></i>記録の一覧を見る
  <% end %>
  <%= link_to(summaries_path , :class => "list-group-item") do %>
    <i class="fa fa-file-text-o fa-fw"></i>先生からのコメントを見る
  <% end %>
  <%= link_to(select_tutor_index_path , :class => "list-group-item") do %>
    <i class="fa fa-group fa-fw"></i>チューターを変更する
  <% end %>
  <%= link_to(users_edit_profile_path , :class => "list-group-item") do %>
    <i class="fa fa-cog fa-fw"></i>プロフィールを変更する
  <% end %>
    <li class="list-group-item"><i class="fa fa-envelope-o fa-fw"></i>
お問い合わせ</li>
  </ul>
 </div>

<div class = "col-md-9">
<h1>Listing Reports</h1>
<div class="timeline report_timeline report_timeline_bar">
    <ul class="timeline report_timeline">
        <% @reports.each_with_index do |report, i| %>
        <li class="timeline-inverted">
          <div class="timeline-badge warning"><i class="fa fa-pencil"></i></div>
          <div class="timeline-panel">
            <div class="timeline-heading">
              <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i><%= report.created_at.strftime("%Y年%m月%d日 %H時%M分") %></small></p>
            </div>
            <div class="timeline-body">
              <p><%= link_to '詳細', report %></p>
            </div>
          </div> 
        </li>
        <% end %>
    </ul>
  </div>





